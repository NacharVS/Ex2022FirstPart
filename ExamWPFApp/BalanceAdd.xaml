<Window x:Class="ExamWPFApp.BalanceAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamWPFApp"
        mc:Ignorable="d"
        Title="BalanceAdd" Height="139" Width="151">
    <Grid>
        <Button x:Name="AddToBalance" Content="Add" HorizontalAlignment="Left" Margin="90,84,0,0" VerticalAlignment="Top" Click="AddToBalance_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,21,0,0" TextWrapping="Wrap" Text="Пополнить баланс" VerticalAlignment="Top"/>
        <TextBox x:Name="BalanceTB" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>

    </Grid>
</Window>
